<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
  		<div id="error_explanation" class="alert alert-danger">
    		<ul>
      			<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
    		</ul>
  		</div>
	<% end %>
	<p>
		Title<br>
		<%= f.text_field :title %>
	<p>

	<p>
		Body<br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit 'Update Book' %>
	</p>
<% end %>

<span><%=link_to 'Edit', edit_book_path(@book) %></span>
<span>|</span>
<span><%=link_to 'Back', books_path %></span>