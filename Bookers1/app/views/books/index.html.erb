<h1>Books</h1>

<table>
	<tr>
		<td align="center"><strong>Title</strong></td>
		<td align="center"><strong>Body</strong></td>
		<td></td>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<span><%=link_to 'Show', book_path(book.id) %></span>
				<span><%=link_to 'Edit', edit_book_path(book.id) %></span>
				<span><%=link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
			</td>
		</tr>
	<% end %>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
  		<div id="error_explanation" class="alert alert-danger">
    		<ul>
      			<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
    		</ul>
  		</div>
	<% end %>
	<p>
		Title<br>
		<%= f.text_field :title %>
	<p>

	<p>
		Body<br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit 'Create Book' %>
	</p>
<% end %>
